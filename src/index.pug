doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Venmo Link
    link(rel="preconnect", href="https://cdn.jsdeliver.net")
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css",
      rel="stylesheet",
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD",
      crossorigin="anonymous"
    )
    script(src="./main.ts", type="module") 
  body
    main.container.px-3.py-4
      header.mb-4
        h1 Venmo Link Generator
      section
        form#generator
          .mb-3
            label.form-label(for="txn") Transaction Type
            select#txn.form-select(name="txn")
              option(value="pay", selected) Pay
              option(value="charge") Charge
          .mb-3
            label.form-label(for="recipients") Recipients
            input#recipients.form-control(
              type="text",
              name="recipients",
              aria-describedby="recipients-help"
            )
            #recipients-help.form-text A comma separated list of Venmo usernames, email addresses, or phone numbers of people to pay or charge.
          .mb-3
            label.form-label(for="amount") Amount
            .input-group
              span.input-group-text $
              input#amount.form-control(
                name="amount",
                type="number",
                min=".01",
                step=".01"
              )
          .mb-3
            label.form-label(for="note") Note
            textarea#note.form-control(name="note", rows="3")
          .mb-3
            a#result
          button#copy.btn.btn-outline-secondary Copy
